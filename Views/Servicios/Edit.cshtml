@model CG_P.Models.Servicio

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Servicio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombre_empresa" class="control-label"></label>
                <input asp-for="nombre_empresa" class="form-control" />
                <span asp-validation-for="nombre_empresa" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="tipo_servicio_id" class="control-label"></label>
                <select asp-for="tipo_servicio_id"
                        class="form-control" asp-items="ViewBag.TiposServicios">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="tipo_servicio_id" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="unidad_medida_id" class="control-label"></label>
                <select asp-for="unidad_medida_id"
                        class="form-control" asp-items="ViewBag.UnidadMedida">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="unidad_medida_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
