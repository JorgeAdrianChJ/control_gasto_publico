@model CG_P.Models.Servicio

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Estas seguro que deseas eliminar este servicio?</h3>
<div>
    <h4>Servicio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre_empresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre_empresa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tipo_servicio_id)
        </dt>
        <dd class = "col-sm-10">
         <select asp-for="@Model.tipo_servicio_id"
                        class="form-control" asp-items="ViewBag.TiposServicios" disabled>
                </select>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.unidad_medida_id)
        </dt>
        <dd class = "col-sm-10">
                <select asp-for="@Model.unidad_medida_id"
                        class="form-control" asp-items="ViewBag.UnidadMedida" disabled>
                </select>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
